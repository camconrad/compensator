# Mainnet RPC URL for forking (required for fork testing)
MAINNET_RPC_URL=https://eth.llamarpc.com

# Optional: Specific block number to fork from (for deterministic testing)
FORK_BLOCK_NUMBER=19000000

# Private key for mainnet testing (optional)
PRIVATE_KEY=your_private_key_here

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Factory contract address (set after deployment)
FACTORY_ADDRESS=your_deployed_factory_address_here

# Frontend API configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# LiFi integration (optional)
NEXT_PUBLIC_LIFI_KEY=your_lifi_api_key_here

# Test configuration (optional)
TEST_VERSION=1.0.0

# Analytics APIs
NEXT_PUBLIC_TALLY_API_KEY=your_tally_api_key_here
NEXT_PUBLIC_DUNE_API_KEY=your_dune_api_key_here

# Convex configuration
NEXT_PUBLIC_CONVEX_URL=your_convex_url_here
CONVEX_DEPLOYMENT=your_convex_deployment_here
